<Window x:Class="WPFUI.Views.GetIdWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFUI.Views"
        mc:Ignorable="d"
        Title="InputWindow" Height="450" Width="800">
    <StackPanel Margin="10">
        <TextBlock Text="Список объектов:" FontWeight="Bold"/>
        <DataGrid Grid.Row="0" Grid.Column="0"
          x:Name="EntitiesDataGrid"
          AutoGenerateColumns="True"
          CanUserAddRows="False"
          ItemsSource="{Binding TableData}" Height="272"/>

        <TextBlock Text="Введите id:"/>
        <TextBox x:Name="FirstNameTextBox" Margin="0,5"/>
        <Button Content="Подтвердить" Click="Button_Click" Margin="0,10"/>
    </StackPanel>
</Window>
